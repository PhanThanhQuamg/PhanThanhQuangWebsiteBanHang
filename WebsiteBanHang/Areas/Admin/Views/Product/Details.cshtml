@model WebsiteBanHang.Context.Product

@{
    ViewBag.Title = "Details";
}

    <h2>Chi tiết sản phẩm</h2>

        <h4>Product</h4>
        <div class="content-wrapper">
            <section class="content my-3">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-6">
                                    <strong style="color:red">CHI TIẾT SẢN PHẨM</strong>
                                </div>
                                <div class="col-md-6 text-right">
                                    <a href="@Url.Action("Edit","Product",  new { id = Model.Id })" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i>Cập Nhật</a>
                                    <a href="@Url.Action("Index","Product")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i>Trở Về Danh Sách</a>

                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tr>
                                <th style="width:80px;color:red;text-align:center">Tiêu Đề</th>
                                <th style="color:green;text-align:center">Nội Dung</th>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Name)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Avatar)
                                </td>
                                <td style="width:80px;">
                                    <img src="~/Content/images/items/@Model.Avatar" class="img-fluid" alt="#" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.CategoryId)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.CategoryId)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ShortDes)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.ShortDes)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.FullDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.FullDescription)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Price)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.PriceDiscount)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.PriceDiscount)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Typeld)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Typeld)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Slug)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Slug)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Brandld)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Brandld)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Deleted)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Deleted)
                                </td>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ShowOnHomePage)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.ShowOnHomePage)
                                </td>
                            </tr>
